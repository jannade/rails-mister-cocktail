<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url(https://static.vinepair.com/wp-content/uploads/2016/05/fresh-herb-cocktails-2.jpg)">
</div>

<div class="container">
  <h1>Add ingredient</h1>
  <div class="form-container text-center">
    <%= simple_form_for [@cocktail, @ingredients, @dose] do |f| %>
      <%= f.association :ingredient, label: 'Ingredient', placeholder: 'Choose an ingredient' %>
      <%= f.input :description, label: 'Quantity', placeholder: 'For example: 10ml or 100g' %>
      <%= f.submit "Add ingredient", class: "btn btn-ghost" %>
    <% end %>
  </div>
</div>



